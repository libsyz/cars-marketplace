<h1>Discover <%= @cars.count %> great rental cars near your place ðŸš™</h1>

<div class="row">
  <% @cars.each do |car| %>
    <div class="col-4">
      <div class="car-card">
        <div class="car-card-image" style="background-image: url('<%= car.image_urls %>')"></div>
        <div class="car-card-content">
          <p> Owner: <%= User.find(car.owner_id).name %></p>
          <p> Brand: <%= car.brand %></p>
          <p> Model: <%= car.model %></p>
          <p> License Plate: <%= car.license_plate %></p>
        </div>
        <div class="car-card-actions">
          <%= link_to 'View details', car_path(car), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_car_path(car), class: 'btn btn-success' %>
          <%= link_to "Remove", car_path(car),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this list?" },
              class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
     >
</div>




<%= link_to 'List my car', new_car_path, class: 'btn btn-success' %>


